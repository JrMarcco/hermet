# ==========================================
# Debezium 环境变量配置模板
# ==========================================
# cp env.template .env

# === Keycloak OAuth2 配置 ===
KC_URL=http://keycloak:8080

# Debezium Client 凭证 ( 需要在 Keycloak 中创建 )
DEBEZIUM_CLIENT_ID=debezium-connect
DEBEZIUM_CLIENT_SECRET=<debezium-client-secret>

# === Kafka 配置 ===
KAFKA_BOOTSTRAP_SERVERS=kafka-1:9093,kafka-2:9093,kafka-3:9093
KAFKA_KEY_PASSWORD=<keystore-password>

# === PostgreSQL 配置 ( 用于 Connector ) ===
# 写入侧数据库 ( your-keystore-password )
POSTGRES_DB0_HOST=pgsql-hermet-0
POSTGRES_DB0_PORT=5432
POSTGRES_DB0_USER=hermet_0
POSTGRES_DB0_PASSWORD=your-db0-password
POSTGRES_DB0_DBNAME=hermet_db0

# 写入侧数据库 ( DB1 )
POSTGRES_DB1_HOST=pgsql-hermet-1
POSTGRES_DB1_PORT=5432
POSTGRES_DB1_USER=hermet_1
POSTGRES_DB1_PASSWORD=your-db1-password
POSTGRES_DB1_DBNAME=hermet_db1
